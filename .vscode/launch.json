{
  "version": "0.2.0",
  "compounds": [
    { "name": "Run All", "configurations": ["Run Backend", "Run Blazor"] }
  ],
  "configurations": [
    {
      "name": "Run Backend",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-backend",
      "program": "${workspaceFolder}/Backend/bin/Debug/net9.0/Backend.dll",
      "cwd": "${workspaceFolder}/Backend",
      "env": { "ASPNETCORE_ENVIRONMENT": "Development", "ASPNETCORE_URLS": "https://localhost:7276" },
      "justMyCode": true,
      "suppressJITOptimizations": true,
      "serverReadyAction": { "action": "openExternally", "pattern": "\\bNow listening on:\\s+(https?://\\S+)" }
    },
    {
      "name": "Run Blazor",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build-blazor",
      "program": "${workspaceFolder}/ReportWithRealTime/bin/Debug/net9.0/ReportWithRealTime.dll",
      "cwd": "${workspaceFolder}/ReportWithRealTime",
      "env": { "ASPNETCORE_ENVIRONMENT": "Development", "ASPNETCORE_URLS": "https://localhost:7166" },
      "justMyCode": true,
      "suppressJITOptimizations": true,
      "serverReadyAction": { "action": "openExternally", "pattern": "\\bNow listening on:\\s+(https?://\\S+)" }
    }
  ]
}
